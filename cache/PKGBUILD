# Maintainer: Cedric Leporcq <cedric at gmail dot com>

pkgname=tango-colors-icon-theme
pkgver='head'
pkgrel=1
pkgdesc="A icon theme based on Tango folders with recolored option and some parts of Faenza, gnome, ubo icons, elementary..."
arch=('any')
url=""
license=('custom:public domain' 'custom:TRADEMARKS' 'Artistic 2.0')
makedepends=('imagemagick' 'icon-naming-utils' 'intltool' 'librsvg' 'recolor')
#~ options=(!strip !zipman)
source=(${pkgname}-${pkgver}.tar.gz
        http://cinderwick.ca/files/archlinux/artwork-official/symbol.svg
        http://cinderwick.ca/files/archlinux/licensing-docs/TRADEMARKS)
md5sums=()

build() {
	cd /usr/local/share/recolor
	# recolor source files
	./recolor.sh -H -O -p $srcdir/${pkgname}-${pkgver}/data/folders.dat $srcdir/${pkgname}-${pkgver}
	cd $srcdir/${pkgname}-${pkgver}
    ./autogen.sh
	#~ # to enable png creation add this option : --enable-png-creation
	./configure --prefix=/usr
	make
}

package() {
	cd $srcdir/${pkgname}-${pkgver}
	make DESTDIR="${pkgdir}" install

	# install licenses
	install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
	install -D -m644 ../TRADEMARKS "${pkgdir}/usr/share/licenses/${pkgname}/TRADEMARKS"
}
